---
import Layout from '../layouts/Layout.astro';
import TraditAuth from '../components/TraditAuth.astro';
import { authClient } from '../lib/auth-client';
---

<Layout title="Login - Tradit Dashboard">
  <main>
    <div class="auth-container">
      <div class="auth-form">
        <h2>Iniciar Sesi贸n con Tradit</h2>
        
        <!-- Passkey Sign In -->
        <div class="passkey-section">
          <h3> Acceso R谩pido con Passkey</h3>
          <p>Si ya tienes un passkey configurado, puedes acceder directamente:</p>
          <button id="passkey-signin-btn" class="btn-passkey">
            Iniciar Sesi贸n con Passkey
          </button>
        </div>

        <div class="divider">
          <span>o</span>
        </div>

        <!-- Traditional Login -->
        <div class="traditional-section">
          <h3> Acceso Tradicional</h3>
          <TraditAuth />
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  import { authClient } from '../lib/auth-client';

  const passkeySigninBtn = document.getElementById('passkey-signin-btn') as HTMLButtonElement;

  // Passkey Sign In
  passkeySigninBtn.addEventListener('click', async () => {
    try {
      // Get authentication options
      const response = await fetch('/api/auth/passkey/authenticate', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
      });

      if (response.ok) {
        const options = await response.json();
        
        // Convert arrays back to Uint8Array for WebAuthn API
        const webauthnOptions = {
          ...options,
          challenge: new Uint8Array(options.challenge)
        };
        
        // Get credentials
        const credential = await navigator.credentials.get({
          publicKey: webauthnOptions
        });

        // Send the credential to the server
        const verifyResponse = await fetch('/api/auth/passkey/authenticate', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            credential: credential
          })
        });

        if (verifyResponse.ok) {
          window.location.href = '/dashboard';
        } else {
          alert('Error al verificar passkey. Intenta el m茅todo tradicional.');
        }
      } else {
        alert('No hay passkeys configurados. Usa el m茅todo tradicional.');
      }
    } catch (error) {
      console.error('Error al iniciar sesi贸n con passkey:', error);
      alert('Error al iniciar sesi贸n con passkey. Intenta el m茅todo tradicional.');
    }
  });
</script>

